{
  "name": "codezone/bible",
  "description": "A bible plugin for WordPress.",
  "type": "project",
  "autoload": {
    "psr-4": {
      "CodeZone\\Bible\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Craig Wann",
      "email": "craig@codezone.io"
    }
  ],
  "scripts": {
    "pre-install-cmd": [
      "./setup-scoper.sh"
    ],
    "post-install-cmd": [
      "node patch-scoper-autoload.js"
    ]
  },
  "require": {
    "php": "^7.4",
    "ext-json": "*",
    "ext-gettext": "*",
    "composer-plugin-api": "^1.0 || ^2.0",
    "whitecube/lingua": "^1.1"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "php-parallel-lint/php-parallel-lint": "^1.3.1",
    "phpcompatibility/php-compatibility": "^9.0",
    "yoast/phpunit-polyfills": "^1.0",
    "wp-coding-standards/wpcs": "^3.0",
    "phpunit/phpunit": "^9"
  },
  "extra": {
    "composer-runtime-api": {
      "platform_check": false
    },
    "wpify-scoper": {
      "prefix": "CodeZone\\Bible",
      "folder": "vendor-scoped",
      "globals": [
        "wordpress"
      ],
      "composerjson": "composer.scoped.json",
      "composerlock": "composer.scoped.lock",
      "autorun": true
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "bamarni/composer-bin-plugin": true,
      "wpify/scoper": true
    },
    "platform": {
      "php": "7.4.27"
    },
    "platform-check": false
  }
}
